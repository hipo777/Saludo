<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textViewNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/text_nombre"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/primary_dark"/>
        <TextView
            android:id="@+id/textViewRequerido1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/text_requerido"
            android:textSize="22sp"
            android:textStyle="italic"
            android:textColor="@color/primary_dark"/>

    </LinearLayout>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_bg"
        android:padding="8dp"
        android:hint="   Introduce tu Nombre aquí   "
        android:textColorHint="#888888" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textViewApellido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/text_apellido"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/primary_dark"/>
        <TextView
            android:id="@+id/textViewRequerido2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/text_requerido"
            android:textSize="22sp"
            android:textStyle="italic"
            android:textColor="@color/primary_dark"/>

    </LinearLayout>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_bg"
        android:padding="8dp"
        android:hint="   Introduce tu Apellido aquí   "
        android:textColorHint="#888888" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textViewEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/text_email"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/primary_dark"/>
        <TextView
            android:id="@+id/textViewRequerido3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/text_requerido"
            android:textSize="22sp"
            android:textStyle="italic"
            android:textColor="@color/primary_dark"/>

    </LinearLayout>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_bg"
        android:padding="8dp"
        android:hint="   Introduce tu Email aquí   "
        android:textColorHint="#888888" />

</LinearLayout>